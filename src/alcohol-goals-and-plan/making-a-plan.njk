          }
        }

        console.log(`json string = `);
        console.log(actionPlanJSONstring);


        let hour = 1/24;
        setCookie('actionPlanObject', actionPlanJSONstring, hour);
        window.location.href = "{{ '/alcohol-goals-and-plan/summary' | url }}";

